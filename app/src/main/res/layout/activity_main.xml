<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#679E96"
    android:gravity="center"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_90sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_70sdp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chats_up"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_30sdp"
        />

    <LinearLayout
        android:id="@+id/jjs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/signin_back"
        android:elevation="@dimen/_100sdp"
        android:orientation="vertical">



        <!-- Username/Email Input Field -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in to your account"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F3F3"
            android:layout_marginTop="@dimen/_30sdp"
            android:elevation="@dimen/_10sdp"
            android:hint="Email" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="#E49B78"
            />
        <!-- Password Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F3F3"
            android:elevation="@dimen/_10sdp"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Forgot Password Text Link -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:textColor="#07176D"
            android:textStyle="bold"
            android:layout_gravity="end"
            />
        <!-- logIn Button -->
        <Button
            android:id="@+id/loginbtn"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/call_button_color"
            android:width="@dimen/_1sdp"
            android:textSize="@dimen/_18sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/signintext"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Sign_up"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="#E49B78"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="#383737" />


    </LinearLayout>

</LinearLayout>
