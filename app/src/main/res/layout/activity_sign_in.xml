<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#679E96"
    android:gravity="center"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_90sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chats_up"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_30sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_15sdp"
        android:background="@drawable/signin_back"
        android:elevation="@dimen/_100sdp"
        android:orientation="vertical">

        <!-- Username/Email Input Field -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginBottom="@dimen/_10sdp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                >



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3F3"
                    android:elevation="@dimen/_10sdp"
                    android:hint="Email" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="#E49B78"
                    android:elevation="@dimen/_10sdp"
                    />
                <!-- Password Input Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3F3"
                    android:elevation="@dimen/_10sdp"
                    android:hint="Password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="#E49B78"
                    android:elevation="@dimen/_10sdp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirm_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3F3"
                    android:hint="Confirm * " >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#E49B78"
                    android:elevation="@dimen/_10sdp"
                    />
                <!-- Password Input Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3F3"
                    android:elevation="@dimen/_10sdp"
                    android:hint="Username">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="#E49B78"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3F3"
                    android:hint="Phone no" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:backgroundTint="#B3795E"
                    />
                <!-- Password Input Field -->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Gender_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F3F3"
                    android:hint="Gender">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Gender_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/logintext"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="#E49B78"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="#383737" />

        <!-- Sign In Button -->
        <Button
            android:id="@+id/signinbtn"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Sign_in"
            android:backgroundTint="@color/call_button_color"
            android:width="@dimen/_1sdp"
            android:textSize="@dimen/_18sdp"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="#0C1F8C"
                android:text="Sign_in with ? " />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/google" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_37sdp"
                app:srcCompat="@drawable/facebook" />
        </LinearLayout>


        <!-- Sign Up Link -->

    </LinearLayout>

</LinearLayout>
